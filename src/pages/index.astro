---
import Layout from "../layouts/Layout.astro"
import ParallaxBillboard from "../components/ParallaxBillboard.astro"
import FooterLink from "../components/FooterLink.astro"
import RandomQuote from "../components/RandomQuote.astro"

const pageTitle = `Elmore Leonard | Official Website`
const metaDescription = `Elmore Leonard, the 'Dickens of Detroit,' wrote 45 novels and became one of Americaâ€™s greatest crime writers. From Westerns to Hollywood hits like Get Shorty and Out of Sight, his sharp dialogue and unforgettable characters defined modern fiction. Discover his legacy.`
const metaKeywords = `Elmore Leonard, crime novels, western fiction, Get Shorty, Out of Sight`
const metaImage = `${Astro.site}images/social/el-opengraph.jpg`
---

<Layout
  classNames={["home"]}
  pageTitle={pageTitle}
  metaDescription={metaDescription}
  metaKeywords={metaKeywords}
  metaImage={metaImage}
>
  <RandomQuote />
  <ParallaxBillboard imageUrl="/images/bg-home-clear.webp">
    <a
      class="sticker-link"
      href="https://www.harpercollins.com/pages/marinerbooks"
      aria-label="Cooler Than Cool - The Biography by C.M. Kushins"
      >Cooler Than Cool - The Biography by C.M. Kushins</a
    >
  </ParallaxBillboard>
  <footer>
    <FooterLink className="dutch" href="/dutch" label="Dutch" />
    <FooterLink className="books" href="/books" label="Books" />
    <FooterLink className="film" href="/film" label="Film" />
    <FooterLink className="podcast" href="/podcast" label="Podcast" />
  </footer>
</Layout>

<style lang="scss">
  @use "../styles/variables.scss" as vars;
  .sticker-link {
    background: white url("/images/el-sticker-bio.svg") no-repeat;
    position: absolute;
    text-indent: -9999px;
    width: 225px;
    height: 225px;
    display: block;
    top: calc(50% - 220px);
    left: calc(50% + 350px);
    transform: scale(1) rotate(-10deg);
    border-radius: 50%;
    border: 0px solid vars.$el-pink;
    text-align: center;
    box-shadow: 0.25rem 0.25rem 0.5rem rgba(0, 0, 0, 0.3);
    font-size: 1.5rem;
    text-transform: uppercase;
    text-decoration: none;
    z-index: 1;
    transition: all 0.3s vars.$nice-bezier;
    will-change: transform border;
    backface-visibility: hidden;
    @media screen and (max-width: vars.$screen-md) {
      top: auto;
      left: auto;
      bottom: 120px;
      right: 40px;
      width: 170px;
      height: 170px;
    }
    &:hover {
      transform: scale(1.1);
      border: 6px solid vars.$el-pink;
    }
  }
</style>
