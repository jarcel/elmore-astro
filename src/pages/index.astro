---
import Layout from "../layouts/Layout.astro"
import ParallaxBillboard from "../components/ParallaxBillboard.astro"
import FooterLink from "../components/FooterLink.astro"
import RandomQuote from "../components/RandomQuote.astro"
---

<Layout classNames={["home"]} pageTitle="Elmore Leonard | Official Website">
  <RandomQuote />
  <ParallaxBillboard imageUrl="/images/bg-home-clear.jpg" />
  <footer>
    <FooterLink className="dutch" href="/dutch" label="Dutch" />
    <FooterLink className="books" href="/books" label="Books" />
    <FooterLink className="film" href="/film" label="Film" />
    <FooterLink className="podcast" href="/podcast" label="Podcast" />
    <FooterLink className="news" href="/news" label="News" />
  </footer>
</Layout>

<style lang="scss" scoped>
  @use "../styles/variables.scss" as vars;
  .home-billboard {
    position: relative;
    background: vars.$el-pink;
    width: 100vw;
    overflow: hidden;
    .inner {
      position: relative;
      height: 100vh;
      width: 100vw;
      background: url(/images/bg-home-clear.jpg) top center no-repeat;
      background-size: cover;
    }
  }
</style>
