---
import Layout from "../../layouts/Layout.astro"
import BookTile from "../../components/BookTile.astro"
import { fetchBooks } from "../../utils/fetchBooks"

const books = await fetchBooks("asc")

if (!books.length) {
  throw new Error(`No books found.`)
}

const pageTitle = `Books | Elmore Leonard`
const metaDescription = `Explore the books by Elmore Leonard, the 'Dickens of Detroit,' who wrote 45 novels and became one of Americaâ€™s greatest crime writers. From Westerns to Hollywood hits like Get Shorty and Out of Sight, his sharp dialogue and unforgettable characters defined modern fiction. Discover his legacy.`
const metaKeywords = `Elmore Leonard, crime novels, western fiction, Get Shorty, Out of Sight`
const metaImage = `${Astro.site}/images/social/el-opengraph.jpg`
---

<Layout
  sectionTitle="Books"
  classNames={["book-index"]}
  pageTitle={pageTitle}
  metaDescription={metaDescription}
  metaKeywords={metaKeywords}
  metaImage={metaImage}
>
  <section class="media-grid book-list">
    {
      books.map(
        (
          book: {
            documentId: string
            Title: string
            Year: string
            Thumbnail: { url: string }
            slug: string
            PrimaryColor: string
          },
          index: number
        ) => (
          <BookTile
            key={book.documentId}
            title={book.Title}
            year={book.Year}
            thumbnailUrl={book.Thumbnail?.url}
            slug={book.slug}
            index={index}
            primaryColor={book.PrimaryColor}
          />
        )
      )
    }
  </section>
</Layout>
