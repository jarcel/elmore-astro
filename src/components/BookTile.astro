---
export interface BookProps {
  title: string
  thumbnailUrl: string
  index?: number
  slug: string
  primaryColor?: string
}

const { title, slug, thumbnailUrl, index = 0, primaryColor } = Astro.props
---

<article
  class="tile book-tile"
  style={`background: ${primaryColor}; animation-delay: ${index * 0.1}s`}
>
  <img
    src={thumbnailUrl}
    alt={`Thumbnail of ${title}`}
    class="book-thumbnail"
    decoding="async"
  />
  <a href={`/books/${slug}`}>
    <span class="title">{title}</span>
  </a>
</article>

<style lang="scss">
  @use "../styles/variables.scss" as variables;
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  .book-tile {
    opacity: 0;
    animation: fadeIn 0.6s variables.$nice-bezier forwards;
  }
</style>
