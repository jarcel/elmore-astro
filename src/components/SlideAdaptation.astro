---
export interface AdaptationSlideProps {
  content: string
  title: string
  adaptationImage: string
  slug: string
}

const { content, title, adaptationImage, slug } = Astro.props
---

<div
  class="slide adaptation"
  style=`background: url(${adaptationImage}) no-repeat center center / cover;`
>
  <div class="inner">
    <h2><a href=`/film/${slug}`>{title}</a></h2>
    <p set:html={content.replace(/\n/g, "<br />")} />
  </div>
</div>

<style lang="scss">
  @use "../styles/variables.scss" as variables;
  .slide.adaptation {
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60rem;
    .inner {
      padding: 0px 3rem;
      text-align: center;
      @media screen and (min-width: variables.$screen-md) {
        width: 700px;
      }
    }
    h2 {
      line-height: 4.5rem;
      a {
        display: inline-block;
        color: white;
        text-decoration: none;
        border-bottom: 1px solid white;
      }
    }
    p {
      margin: 1em 0;
      font-weight: 300;
      font-size: 2rem;
      line-height: 3rem;
      span {
        display: block;
      }
      @media screen and (min-width: variables.$screen-sm) {
        font-size: 2.5rem;
        line-height: 4rem;
      }
    }
  }
</style>
