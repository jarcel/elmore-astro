---
import "../styles/global.scss"
import Menu from "../components/Menu.astro"

export interface LayoutProps {
  pageTitle?: string
  sectionTitle?: string
  sectionColor?: string
  classNames?: string[]
  jsonLdData?: any
}

const {
  pageTitle,
  sectionTitle = "",
  sectionColor,
  classNames = [],
  jsonLdData,
} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="Elmore Leonard, crime novels, noir fiction, Justified, Get Shorty, crime writer, Western books, American fiction"
    />
    <title>{pageTitle}</title>
    {
      jsonLdData && (
        <script
          type="application/ld+json"
          set:html={JSON.stringify(jsonLdData)}
        />
      )
    }</head
  >
</html>

<body class:list={[...classNames]}>
  <Menu sectionTitle={sectionTitle} sectionColor={sectionColor} />
  <slot />
</body>
